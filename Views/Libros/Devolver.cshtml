@model Biblio.Models.PrestamosViewModel

@{
    ViewData["Title"] = "Devoluciones";
}

<h1>Index</h1>

<p>
    <a asp-action="Prestar">Crear nuevo prestamo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prestamos[0].nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prestamos[0].nombreLibro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prestamos[0].fechaPrestamo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prestamos[0].estado)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Prestamos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreLibro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaPrestamo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            
            <td>
               
                    
                <a asp-action="Devolver2" asp-route-id="@item.ID">Devolver</a> 
                    
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>
